<UserControl x:Class="school_management.view.ClassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:school_management.view"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:viewmodels="clr-namespace:school_management.view_model"
             mc:Ignorable="d" 
              d:DesignHeight="768" d:DesignWidth="1210">



    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <!-- Header Section -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Class Management" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="Manage classes, assignments, and capacity" 
                                   Style="{StaticResource PageSubtitleStyle}"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding OpenAddDialogCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Plus" 
                                          Foreground="White"
                                          Width="16" Height="16"
                                          Margin="0,0,8,0"/>
                            <TextBlock Text="Add Class" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Classes Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Grid Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Style="{StaticResource CardTitleStyle}">
                                    <Run Text="Classes "/>
                                    <Run Text="{Binding ClassCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Text="All active classes in the system" 
                                           Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Search Box -->
                        <Border BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Background="White"
                                Width="400"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20">
                            <Grid>
                                <fa:IconImage Icon="Search" 
                                              Foreground="{StaticResource TextSecondary}"
                                              Width="16" Height="16"
                                              HorizontalAlignment="Left"
                                              Margin="12,0,0,0"/>
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="35,10,10,10"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"/>
                            </Grid>
                        </Border>

                        <!-- Classes Table -->
                        <DataGrid ItemsSource="{Binding Classes}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,12,12,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Class" Binding="{Binding ClassName}" Width="100"/>
                                <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="120"/>
                                <DataGridTextColumn Header="Homeroom" Binding="{Binding Homeroom}" Width="120"/>
                                <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="*" MinWidth="150"/>

                                <DataGridTemplateColumn Header="Enrollment" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <fa:IconImage Icon="Users" 
                                                              Foreground="{StaticResource TextSecondary}"
                                                              Width="14" Height="14"
                                                              Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding EnrollmentDisplay}" 
                                                           FontSize="13"
                                                           Foreground="{StaticResource TextPrimary}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                                <ProgressBar Value="{Binding EnrollmentPercentage, Mode=OneWay}" 
                                                             Maximum="100"
                                                             Width="80"
                                                             Height="6"
                                                             Foreground="{StaticResource PrimaryBlue}"
                                                             Background="{StaticResource BorderLight}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Academic Year" Binding="{Binding AcademicYear}" Width="120"/>
                                <DataGridTextColumn Header="Term" Binding="{Binding Term}" Width="120"/>

                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource ActionIconButtonStyle}"
                                                        Command="{Binding DataContext.OpenEditDialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <fa:IconImage Icon="Edit" 
                                                                  Foreground="{StaticResource TextSecondary}"
                                                                  Width="16" Height="16"/>
                                                </Button>
                                                <Button Style="{StaticResource ActionIconButtonStyle}"
                                                        Command="{Binding DataContext.DeleteClassCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <fa:IconImage Icon="TrashAlt" 
                                                                  Foreground="{StaticResource PrimaryRed}"
                                                                  Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Add Class Dialog Overlay -->
        <Grid Visibility="{Binding IsAddDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}" 
              Background="#80000000">
            <Border Background="White"
                    CornerRadius="12"
                    MaxWidth="600"
                    Margin="50"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                      ShadowDepth="0" 
                                      BlurRadius="16" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" Margin="24,24,24,20">
                        <StackPanel>
                            <TextBlock Text="Add New Class" 
                                       Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Create a new class with the details below." 
                                       Style="{StaticResource CardSubtitleStyle}"/>
                        </StackPanel>
                        <Button Content="✕" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Foreground="{StaticResource TextSecondary}"
                                Command="{Binding CloseAddDialogCommand}"/>
                    </Grid>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0" MaxHeight="400">
                        <StackPanel>
                            <!-- Class Name and Grade -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Class Name" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewClass.ClassName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Grade" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Grades}"
                                              SelectedItem="{Binding NewClass.Grade}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Homeroom and Capacity -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Homeroom" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewClass.Homeroom, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Capacity" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewClass.Capacity, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Homeroom Teacher -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Homeroom Teacher" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding Teachers}"
                                          SelectedValue="{Binding NewClass.TeacherId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="FullName"
                                          Padding="12"
                                          BorderBrush="{StaticResource BorderLight}"
                                          BorderThickness="1">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </StackPanel>

                            <!-- Academic Year and Term -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Academic Year" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding AcademicYears}"
                                              SelectedItem="{Binding NewClass.AcademicYear}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Term" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Terms}"
                                              SelectedItem="{Binding NewClass.Term}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Footer -->
                    <Border Grid.Row="2" 
                            BorderThickness="0,1,0,0"
                            BorderBrush="{StaticResource BorderLight}"
                            Padding="24"
                            Margin="0,20,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding AddClassCommand}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <fa:IconImage Icon="Check" 
                                              Foreground="White"
                                              Width="16" Height="16"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="Add Class" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Edit Class Dialog Overlay -->
        <Grid Visibility="{Binding IsEditDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}" 
              Background="#80000000">
            <Border Background="White"
                    CornerRadius="12"
                    MaxWidth="600"
                    Margin="50"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                      ShadowDepth="0" 
                                      BlurRadius="16" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" Margin="24,24,24,20">
                        <StackPanel>
                            <TextBlock Text="Edit Class" 
                                       Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Update the class details below." 
                                       Style="{StaticResource CardSubtitleStyle}"/>
                        </StackPanel>
                        <Button Content="✕" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Foreground="{StaticResource TextSecondary}"
                                Command="{Binding CloseEditDialogCommand}"/>
                    </Grid>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0" MaxHeight="400">
                        <StackPanel>
                            <!-- Class Name and Grade -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Class Name" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding SelectedClass.ClassName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Grade" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Grades}"
                                              SelectedItem="{Binding SelectedClass.Grade}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Homeroom and Capacity -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Homeroom" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding SelectedClass.Homeroom, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Capacity" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding SelectedClass.Capacity, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Homeroom Teacher -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Homeroom Teacher" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding Teachers}"
                                          SelectedValue="{Binding SelectedClass.TeacherId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="FullName"
                                          Padding="12"
                                          BorderBrush="{StaticResource BorderLight}"
                                          BorderThickness="1">
                                    <ComboBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </StackPanel>

                            <!-- Academic Year and Term -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Academic Year" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding AcademicYears}"
                                              SelectedItem="{Binding SelectedClass.AcademicYear}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Term" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Terms}"
                                              SelectedItem="{Binding SelectedClass.Term}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Footer -->
                    <Border Grid.Row="2" 
                            BorderThickness="0,1,0,0"
                            BorderBrush="{StaticResource BorderLight}"
                            Padding="24"
                            Margin="0,20,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding UpdateClassCommand}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <fa:IconImage Icon="Check" 
                                              Foreground="White"
                                              Width="16" Height="16"
                                              Margin="0,0,8,0"/>
                                <TextBlock Text="Update Class" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
