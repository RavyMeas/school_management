<UserControl x:Class="school_management.view.student_view"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:school_management.view"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1210">

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <!-- Header Section -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Student Management" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="Manage student information and enrollment" 
                                   Style="{StaticResource PageSubtitleStyle}"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding OpenAddDialogCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Plus" 
                                          Foreground="White"
                                          Width="16" Height="16"
                                          Margin="0,0,8,0"/>
                            <TextBlock Text="Add Student" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Students Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Card Header -->
                        <Grid Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Style="{StaticResource CardTitleStyle}">
                                    <Run Text="Students "/>
                                    <Run Text="{Binding StudentCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Text="All registered students in the system" 
                                           Style="{StaticResource CardSubtitleStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Search Box -->
                        <Border BorderBrush="{StaticResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Background="White"
                                Width="400"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,20">
                            <Grid>
                                <fa:IconImage Icon="Search" 
                                              Foreground="{StaticResource TextSecondary}"
                                              Width="16" Height="16"
                                              HorizontalAlignment="Left"
                                              Margin="12,0,0,0"/>
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="35,10,10,10"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Students Table -->
                        <DataGrid ItemsSource="{Binding Students}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="Transparent"
                                  AlternatingRowBackground="Transparent"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,12,12,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9FAFB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*" MinWidth="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="120"/>
                                <DataGridTextColumn Header="Class" Binding="{Binding Class}" Width="100"/>
                                <DataGridTextColumn Header="Enrollment Date" Binding="{Binding EnrollmentDateString}" Width="140"/>

                                <DataGridTemplateColumn Header="Status" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource StatusBadgeStyle}">
                                                <TextBlock Text="{Binding Status}" 
                                                           FontSize="12"
                                                           FontWeight="Medium"
                                                           Foreground="{StaticResource PrimaryGreen}"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Style="{StaticResource ActionIconButtonStyle}"
                                                        Command="{Binding DataContext.OpenEditDialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <fa:IconImage Icon="Edit" 
                                                                  Foreground="{StaticResource TextSecondary}"
                                                                  Width="16" Height="16"/>
                                                </Button>
                                                <Button Style="{StaticResource ActionIconButtonStyle}"
                                                        Command="{Binding DataContext.DeleteStudentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}">
                                                    <fa:IconImage Icon="TrashAlt" 
                                                                  Foreground="{StaticResource PrimaryRed}"
                                                                  Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Add Student Dialog Overlay -->
        <Grid Visibility="{Binding IsAddDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}" 
              Background="#80000000">
            <Border Background="White"
                    CornerRadius="12"
                    MaxWidth="600"
                    Margin="50"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                      ShadowDepth="0" 
                                      BlurRadius="16" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" Margin="24,24,24,20">
                        <StackPanel>
                            <TextBlock Text="Add New Student" 
                                       Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Enter the student's information below." 
                                       Style="{StaticResource CardSubtitleStyle}"/>
                        </StackPanel>
                        <Button Content="✕" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Foreground="{StaticResource TextSecondary}"
                                Command="{Binding CloseAddDialogCommand}"/>
                    </Grid>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0" MaxHeight="400">
                        <StackPanel>
                            <!-- First Name and Last Name -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="First Name *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewStudent.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Last Name *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewStudent.LastName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Email -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Email *" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding NewStudent.Email, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12"
                                         BorderBrush="{StaticResource BorderLight}"
                                         BorderThickness="1">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

                            <!-- Grade and Class -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Grade *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Grades}"
                                              SelectedItem="{Binding SelectedGradeForNew, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Class" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding AvailableClasses}"
                                              SelectedItem="{Binding NewStudent.Class, Mode=TwoWay}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Enrollment Date -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Enrollment Date" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding NewStudent.EnrollmentDate}"
                                            Padding="12"
                                            BorderBrush="{StaticResource BorderLight}"
                                            BorderThickness="1"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Footer -->
                    <Border Grid.Row="2" 
                            BorderThickness="0,1,0,0"
                            BorderBrush="{StaticResource BorderLight}"
                            Padding="24"
                            Margin="0,20,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding AddStudentCommand}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Add Student" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Edit Student Dialog Overlay -->
        <Grid Visibility="{Binding IsEditDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}" 
              Background="#80000000">
            <Border Background="White"
                    CornerRadius="12"
                    MaxWidth="600"
                    Margin="50"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="{StaticResource ShadowColor}" 
                                      ShadowDepth="0" 
                                      BlurRadius="16" 
                                      Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" Margin="24,24,24,20">
                        <StackPanel>
                            <TextBlock Text="Edit Student" 
                                       Style="{StaticResource CardTitleStyle}"/>
                            <TextBlock Text="Update the student's information below." 
                                       Style="{StaticResource CardSubtitleStyle}"/>
                        </StackPanel>
                        <Button Content="✕" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Foreground="{StaticResource TextSecondary}"
                                Command="{Binding CloseEditDialogCommand}"/>
                    </Grid>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0" MaxHeight="400">
                        <StackPanel>
                            <!-- First Name and Last Name -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="First Name *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding EditStudent.FirstName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Last Name *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding EditStudent.LastName, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12"
                                             BorderBrush="{StaticResource BorderLight}"
                                             BorderThickness="1">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Email -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Email *" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding EditStudent.Email, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="12"
                                         BorderBrush="{StaticResource BorderLight}"
                                         BorderThickness="1">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

                            <!-- Grade and Class -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Grade *" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding Grades}"
                                              SelectedItem="{Binding SelectedGradeForEdit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Class" 
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding AvailableClassesForEdit}"
                                              SelectedItem="{Binding EditStudent.Class, Mode=TwoWay}"
                                              Padding="12"
                                              BorderBrush="{StaticResource BorderLight}"
                                              BorderThickness="1">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Enrollment Date -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Enrollment Date" 
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding EditStudent.EnrollmentDate}"
                                            Padding="12"
                                            BorderBrush="{StaticResource BorderLight}"
                                            BorderThickness="1"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Footer -->
                    <Border Grid.Row="2" 
                            BorderThickness="0,1,0,0"
                            BorderBrush="{StaticResource BorderLight}"
                            Padding="24"
                            Margin="0,20,0,0">
                        <Button Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Command="{Binding EditStudentCommand}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Update Student" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>