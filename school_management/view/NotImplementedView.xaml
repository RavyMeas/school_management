<UserControl x:Class="school_management.view.NotImplementedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:school_management.view"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1210">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <Grid Margin="0,0,0,30" Height="647">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header Section -->
                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
                        <TextBlock x:Name="TitleTextBlock" 
                                   Text="Feature" 
                                   Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="This feature is currently under development" 
                                   Style="{StaticResource PageSubtitleStyle}"/>
                    </StackPanel>

                    <!-- Centered Message -->
                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="Yoo, I need a bit more time to implement this. I will update next time." 
                                   Style="{StaticResource PageNotImpment}"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="18"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>