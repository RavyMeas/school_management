<Window x:Class="school_management.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:school_management.view"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewmodels="clr-namespace:school_management.view_model"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Title="School Management System"
        Height="768" Width="1440">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    <Border Background="White" 
            CornerRadius="10"
            BorderBrush="#E5E7EB"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                              BlurRadius="15" 
                              ShadowDepth="0" 
                              Opacity="0.1"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Background="{StaticResource SidebarBg}"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="16,0,0,0">
                        <fa:IconImage Icon="School" 
                                      Width="16" 
                                      Height="16"
                                      Foreground="{StaticResource PrimaryBlue}"
                                      Margin="0,0,10,0"/>
                        <TextBlock Text="School Management System" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Control Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <!-- Minimize Button -->
                        <Button x:Name="btnMinimize" 
                                Width="46" 
                                Height="40"
                                Click="btnMinimize_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconImage Icon="WindowMinimize" 
                                          Width="12" 
                                          Height="12"
                                          Foreground="{StaticResource TextPrimary}"/>
                        </Button>

                        <!-- Maximize/Restore Button -->
                        <Button x:Name="btnMaximize" 
                                Width="46" 
                                Height="40"
                                Click="btnMaximize_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconImage Icon="Square" 
                                          Width="12" 
                                          Height="12"
                                          Foreground="{StaticResource TextPrimary}"/>
                        </Button>

                        <!-- Close Button -->
                        <Button x:Name="btnClose" 
                                Width="46" 
                                Height="40"
                                Click="btnClose_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="0,10,0,0">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DC2626"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:IconImage Icon="Xmark" 
                                          Width="12" 
                                          Height="12">
                                <fa:IconImage.Style>
                                    <Style TargetType="fa:IconImage">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </fa:IconImage.Style>
                            </fa:IconImage>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Sidebar -->
            <Border Grid.Row="1" 
                    Grid.Column="0" 
                    Background="{StaticResource SidebarBg}" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,1,0"
                    CornerRadius="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- User Profile Section -->
                    <Border Grid.Row="0" 
                            Margin="16,20,16,16"
                            Background="White"
                            CornerRadius="8"
                            Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="40" 
                                    Height="40"
                                    Background="{StaticResource PrimaryBlue}"
                                    CornerRadius="20">
                                <TextBlock Text="AD" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="12,0,0,0" 
                                        VerticalAlignment="Center">
                                <TextBlock Text="Admin User" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Administrator" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Menu Items -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Main Section -->
                            <TextBlock Text="MAIN" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="16,8,16,8"/>

                            <!-- Dashboard -->
                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Dashboard">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Dashboard">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Dashboard"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Dashboard" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="ThLarge" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Dashboard">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Dashboard">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>


                 
                            <!-- Students -->
                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Students">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Students">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Students"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Students" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="UserGraduate" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Students">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Students" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Students">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Teachers -->
                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Teachers">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Teachers">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Teachers"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Teachers" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Chalkboard" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Teachers">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Teachers" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Teachers">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Parents -->

                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Parents">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Parents">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Parents"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Parents" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Users" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Parents">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Parents" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Parents">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Classes -->

                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Classes">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Classes">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Classes"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Classes" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="School" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Classes">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Classes" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Classes">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>


                         
                            <!-- Academic Section -->
                            <TextBlock Text="ACADEMIC" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="16,16,16,8"/>

                            <!-- Subjects -->

                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Subjects">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Subjects">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Subjects"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Subjects" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="BookOpen" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Subjects">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Subjects" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Subjects">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>


                            <!-- Enrollment -->

                            <Border Padding="16,12" Margin="8,2" Cursor="Hand" CornerRadius="8" Tag="Enrollment">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedMenu}" Value="Enrollment">
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SidebarHover}"/>
                                            </Trigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding SelectedMenu}" Value="Enrollment"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="{StaticResource SelectedBg}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding NavigateCommand}" CommandParameter="Enrollment" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="ClipboardList" Width="18" Height="18" Margin="0,0,12,0">
                                        <fa:IconImage.Style>
                                            <Style TargetType="fa:IconImage">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Enrollment">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:IconImage.Style>
                                    </fa:IconImage>
                                    <TextBlock Text="Enrollment" FontSize="14" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedMenu}" Value="Enrollment">
                                                        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="2" 
                            Background="#F9FAFB" 
                            Padding="16,12" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,0,10">
                        <TextBlock FontSize="11" 
                                   Foreground="{StaticResource TextSecondary}" 
                                   TextAlignment="Center">
                            <Run Text="School Management System"/>
                            <LineBreak/>
                            <Run Text="v2.0.0 © 2025"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Row="1" 
                    Grid.Column="1" 
                    Background="{StaticResource MainBg}"
                    CornerRadius="0,0,10,0">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>
    </Border>
</Window>